{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["lerna.json", "*.md"],
      "message": "chore(release): publish all mocklets",
      "registry": "https://npm.pkg.github.com/package"
    },
    "bootstrap": {
      "ignore": "tests",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": ["packages/*"]
}
